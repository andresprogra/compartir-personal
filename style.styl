@import 'nib/vendor'

vendor-prefixes = o ms moz webkit official

azul = #273B47
verde = #7DCD40
link = "http://36.media.tumblr.com/230cbd5a43b66061f4c8756a83b6ce65/tumblr_nqx7pp3iyj1tubinno1_1280.jpg"

	
#banner
	//background url(http://36.media.tumblr.com/95f5df495c2860468df6955b5d7eaa0a/tumblr_nqx90nZCtb1tubinno1_1280.jpg) no-repeat center
	background url(link)  no-repeat fixed top
	background-position cover
	background-size 100% 100%
	padding 1.8em
	article.menu-movil
		color white		
		display none
		float right
		font-size 2em
		
	header
		background black
		height auto
		margin-bottom 50px
		nav 
			float right
			ul
				li					
					display inline-block
					font-size 1.4em
					font-weight 700
					margin-right 20px
					a
						color white
						text-decoration none
						text-shadow 1px 1px 1px #000
						&.main:hover
							border-bottom 4px solid verde
						&.register
							border 2px solid white
							padding 6px 30px
	section.informacion
		article
			padding-top 13vh
			h2.typed
				color white
				font-size 3em
				font-weight 900
				text-align center
				text-shadow 4px 2px 4px rgba(0,0,0,1)
		article.formulario
			background rgba(azul,.8)
			border-radius 5px
			padding 3em 2em
			h2
				color white
				font-size 2.5em
				text-align center
				text-shadow 2px 2px 2px #000
			form
				input
					color white !important
					font-size 16px
					height 37px
					margin 10px 0
					
section.intro
	//link = "images/mockup-laptop-domdesign.jpg"
