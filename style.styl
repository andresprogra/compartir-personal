	padding 2em 0em 8em
	article
		img
			background-color #159BE9
			border-radius 50%
			max-height 170px
			max-width 170px
			&.green
				background-color verde
		h2
			color white
			font-weight 700
			text-align center
			&.titulos-service
				text-shadow 1px 1px 1px rgba(#000)
		p
			background-color rgba(azul,0.8)
			border-radius .4em
			color white
			font-size 1.3em
			font-weight 700
			line-height 1.2em
			margin 20px 0
			padding 1em
			text-align justify
			
			
			
		
.btn
	border none
	border-radius .4em !important
	box-sizign border-box !important
	color #FFF !important
	display inline-block !important
	float right
	font-size 20px !important
	font-weight 700 !important
	height 3em !important
	line-height 2.8em !important
	line-height 3em !important
	padding 0 1.5em !important
	text-shadow 0 1px rgba(#000,.5) !important
	&.green
		background linear-gradient(verde,darken(verde,3)) !important
		border-bottom 1px solid darken(verde,15) !important
		border-bottom-width 4px !important
	&:hover
		color white
	&:active
		border-bottom-width 1px
		line-height 3em





@media screen and (max-width 600px)
	h2.typed
		font-size 1.5em !important
		
@media screen and (max-width 991px)
	section.informacion
		article
			padding-top 1vh !important
	header.menu
		display none
	.menu-movil
		display block !important
